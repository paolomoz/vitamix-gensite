{
  "manifest_version": 3,
  "name": "Vitamix Intent Inference Demo",
  "description": "Real-time intent inference demo tool for vitamix.com and AEM Edge Delivery - captures user behavior and generates personalized page queries",
  "version": "1.2.1",
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "permissions": [
    "storage",
    "webNavigation",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.vitamix.com/*",
    "*://vitamix.com/*",
    "*://main--vitamix-gensite--paolomoz.aem.live/*",
    "*://*.aem.live/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.vitamix.com/*",
        "*://vitamix.com/*",
        "*://main--vitamix-gensite--paolomoz.aem.live/*"
      ],
      "js": ["content-script.js"],
      "css": ["hint-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel/panel.html",
        "panel/panel.css",
        "panel/panel.js",
        "lib/*.js",
        "overlay-panel.css"
      ],
      "matches": [
        "*://www.vitamix.com/*",
        "*://vitamix.com/*",
        "*://main--vitamix-gensite--paolomoz.aem.live/*"
      ]
    }
  ],
  "action": {
    "default_title": "Toggle Intent Inference Panel",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg"
    }
  }
}
